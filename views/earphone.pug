
extends layout

block content
  h1= title
  p earphone results
  div(class="listening-device")
        div(class="row")
            - let items = results
               each v,index in items
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.earphone_type}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Cost}

                script.                
                      function buy(intemNo)
                      {
                            alert(`you purchased Item ${intemNo+1}`)
                      }